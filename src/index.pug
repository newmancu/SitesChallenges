html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title pug index file
    link(rel="stylesheet" href="./css/style.css")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    script(src="./libs/jquery/js/bin/jquery.min.js" type="text/javascript")
  body 
    .body
      header
        .header__container.container
          a(href="#")
            i.material-icons dehaze

      //- SECTION HELLO
      section.section-hello
        .section__wrapper.container
          .info__container
            h3.section__sub-title ABOUT US
            h2.section__title Very interesting title that you should read
            p.section__p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.

            ul.question__ul 
              li
                img.question__marker(src="/img/svg/question.svg" alt="question marker")
                p.question__p Very interesting our point

              li
                img.question__marker(src="/img/svg/question.svg" alt="question marker")
                p.question__p Very interesting our point
            
            a.btn(href="#") Click me!

          .info__photo
            img#blob1(src='/img/svg/blob1.svg' alt='blob1')
            //- .img__wrapper
            img.info__img(src='/img/jpg/girl_photo_258.jpg' alt='photo')

      //- SECTION PROJECTS
      section.section-projects 
        .projects__container.container
          h1.section__title Projects
          p.section__p.seciton__p-black Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
          img#blob2(src='/img/svg/blob2.svg' alt="blob2")

      //- SECTION LIST OF PROJECTS
      section.section-projects-list
        - var n = 0
        ul.list__container.container

          while n < 3
            .projects__card
              i.card__icon.material-icons tablet
              .card__content
                h3.card__title='WEB TITLE ' + n++
                p.card__p Lorem ipsum dolor sit amet, consectetur adipiscing elit
                a.card__arrow(href='#')
                  img(src='/img/svg/arrow.svg' alt='arrow')
        
        ul.list__container.container

          while n < 6
            .projects__card
              i.card__icon.material-icons all_inclusive
              .card__content
                h3.card__title='WEB TITLE ' + n++
                p.card__p Lorem ipsum dolor sit amet, consectetur adipiscing elit
                a.card__arrow(href='#')
                  img(src='/img/svg/arrow.svg' alt='arrow')

      //- SECTION TEAM
      section.section-team
        - var t = 0
        ul.team__container.container

          while t < 4
            .team__content
              img.team__img(src='/img/jpg/yuna.jpg' alt='yuna')
              h3.team__name='Alan Braker ' + t++
              h4.team__staf Developer
        ul.team__container.container

          while t < 8
            .team__content.team__content-white
              img.team__img(src='/img/jpg/yuna.jpg' alt='yuna')
              h3.team__name='Alan Braker ' + t++
              h4.team__staf Developer

      //- SECTION WHAT's NEXT
      section.section-next
        .next__container.container
          p.next__p What's next?
          
          img#question2.blob(src='/img/svg/question2.svg' alt='question')
          img#star.blob(src='/img/svg/star.svg' alt='star')
      
      //- SECTION FAQ
      section.section-faq

    footer
      .footer__container.container
        h4.footer__msg Some message in footer


